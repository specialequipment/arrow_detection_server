<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="de.woodpecker.archery.arrowdetection.ui.settings.ArrowDetectionController">
    <center>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="preview" pickOnBounds="true" preserveRatio="true"/>
        </ScrollPane>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <bottom>
        <HBox alignment="TOP_RIGHT" fillHeight="false" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#saveAndClose" text="Speichern"/>
        </HBox>
    </bottom>
</BorderPane>
